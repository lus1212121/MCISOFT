         <script>
            // SI ES 1 SALE UN CHULO //
            function replaceWithIcon(cell) {
    const value = parseInt(cell.innerText);
    if (!isNaN(value)) {
        if (value === 1) {
            cell.innerHTML = '<i class="bi bi-check text-success"></i>';
        } else if (value === 0) {
            cell.innerHTML = '<i class="bi bi-x text-danger"></i>';
        }
    }
}
