  <body>
      <section class="contact-box">
        <div class="row no-gutters bg-dark">
            

            <div class="col-xl-12 col-lg-12 d-flex">
                
                 <div class="container align-self-center p-4">
               
                    <h1 class="vamos font-weight-bold mb-3">UDV INSCRIPCIONES HOMBRES <i class="bi pipo bi-info-circle-fill"></i></h1>
                     
                     <p class="text-muted mb-5">Ingresa la siguiente información para registrarte.</p>
 
                     <form action="/save" method="POST"  id="myForm"  onsubmit="return validarFormulario()">
                        <div class="form-group mb-3">
                            <label class="font-weight-bold" for="nombre">Nombre Completo <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="nombre"    name="nombre" placeholder="Nombre Completo">
                        </div>

                         <div class="form-row mb-2">
                             <div class="form-group col-md-6">
                                 <label class="font-weight-bold"  for="edad">Fecha de Nacimiento <span class="text-danger">*</span></label>
                                 <input type="date" class="form-control" id="edad" name="edad" placeholder="Fecha de Nacimiento">
                             </div>
                             <div class="form-group col-md-6">
                                 <label class="font-weight-bold"  for="documento">Documento <span class="text-danger">*</span></label>
                                 <input type="number" class="form-control" id="documento" name="documento" placeholder="Numero de Documento">
                             </div>
                             <div class="form-group col-md-6">
                                <label class="font-weight-bold"  for="telefono">Teléfono <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="telefono" name="telefono" placeholder="Numero de Teléfono">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold"  for="fecha">Fecha de Hoy <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="fecha" name="fecha" placeholder="Fecha de Hoy">
                            </div>
                         </div>
                         <div class="form-group mb-3">
                            <label class="font-weight-bold"  for="lider12">Líder 12 <span class="text-danger">*</span></label>
                         <select class="form-select " id="lider12" name="lider12" required aria-label="Default select example">
                            <option selected>- Seleccione -</option>
                            <option value="LUIS FRANCISCO">LUIS FRANCISCO BASTO</option>
                            <option value="PS. WILSON RUIZ">PS. WILSON RUIZ</option>
                            <option value="PS. JHON SERANO">PS. JHON SERANO</option>
                            <option value="SERGIO MANTILLA">SERGIO MANTILLA</option>
                            <option value="P. CARLOS ESTEPA">P. CARLOS ESTEPA</option>
                            <option value="P. OSCAR HOMERO SERRANO">P. OSCAR HOMERO SERRANO</option>
                            <option value="EDSON VEGA">EDSON VEGA</option>
                            <option value="P. MANUEL CABARCAS">P. MANUEL CABARCAS</option>
                            <option value="SATURIO SOLANO">SATURIO SOLANO</option>
                            <option value="P. JAEL HOYOS">P. JAEL HOYOS</option>
                            <option value="MARCELINO CELI">MARCELINO CELI</option>
                            <option value="GRUPO ALTERNO">GRUPO ALTERNO</option>
                          </select>                                                                 

                        </div>
                      
                         
                         <div class="form-group mb-3">
                             <label class="font-weight-bold"  for="lider144">Líder 144 <span class="text-danger">*</span></label>
                             <input type="text" class="form-control" id="lider144" name="lider144" placeholder="Nombre del Líder de 144">
