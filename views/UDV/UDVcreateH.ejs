    <script>
        function validarFormulario() {
          // Obtener los valores de los campos del formulario
          var nombre = document.getElementById('nombre').value;
          var edad = document.getElementById('edad').value;
          var documento = document.getElementById('documento').value;
          var telefono = document.getElementById('telefono').value;
          var fecha = document.getElementById('fecha').value;
          var lider12 = document.getElementById('lider12').value;
          var lider144 = document.getElementById('lider144').value;
          var liderCelula = document.getElementById('liderCelula').value;
          var terminosYcondiciones = document.getElementById('terminosYcondiciones').checked;
      
          // Realizar la validación
          if (
            nombre === '' ||
            edad === '' ||
            documento === '' ||
            telefono === '' ||
            fecha === '' ||
            lider12 === '- Seleccione -' ||
            lider144 === '' ||
            liderCelula === '' ||
            !terminosYcondiciones
          ) {
            // Mostrar un mensaje de error o realizar alguna acción adicional
            alert('Por favor, complete todos los campos del formulario.');
            return false; // Evitar que se envíe el formulario
          }
      
          // Si todos los campos están llenos, el formulario se enviará
          return true;
        }

        // Obtener la fecha actual
        var fechaActual = new Date().toISOString().split('T')[0];

    // Establecer el valor del campo "Fecha de Hoy"
    document.getElementById('fecha').value = fechaActual;

     // Obtener el elemento del campo de entrada
    var input = document.getElementById('fecha');

    // Establecer el atributo readonly
    input.setAttribute('readonly', 'readonly');

      </script>
      


