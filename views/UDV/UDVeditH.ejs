  <body>
    <% if (infoMinisterio) { %>
    
      <section class="contact-box">
        <div class="row no-gutters bg-dark">
        

            <div class="col-xl-12 col-lg-12 d-flex">
                
                 <div class="container align-self-center p-4">
               
                    <h1 class="vamos font-weight-bold mb-3">UDV INSCRIPCIONES HOMBRES <i class="bi pipo bi-info-circle-fill"></i></h1>
                     
                     <p class="text-muted mb-5">Ingresa la siguiente información para registrarte.</p>
 
                     <form action="/update" method="POST"  id="myFormL"  onsubmit="return validarFormulario()">
                        <input id="id" name="id" value="<%= infoMinisterio.id %>" hidden>
                        <div class="form-group mb-3">
                            <label class="font-weight-bold" for="nombre">Nombre Completo <span class="text-danger">*</span></label>
                            <input type="text" class="form-control"  id="nombre"  value="<%= infoMinisterio.nombre %>"  name="nombre" placeholder="Nombre Completo">
                        </div>

                         <div class="form-row mb-2">
                             <div class="form-group col-md-6">
                                 <label class="font-weight-bold"  for="edad">Fecha de Nacimiento <span class="text-danger">*</span></label>
                                 <input type="number" class="form-control" id="edad" name="edad"  value="<%= infoMinisterio.edad %>" placeholder="Fecha de Nacimiento">
                             </div>
                             <div class="form-group col-md-6">
                                 <label class="font-weight-bold"  for="documento">Documento <span class="text-danger">*</span></label>
                                 <input type="number" class="form-control" id="documento" value="<%= infoMinisterio.documento %>" name="documento" placeholder="Número de Documento">
                             </div>
                             <div class="form-group col-md-6">
                                <label class="font-weight-bold"  for="telefono">Teléfono <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="telefono" name="telefono" value="<%= infoMinisterio.telefono %>" placeholder="Número de Teléfono">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold"  for="fecha">Fecha de Hoy <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="fecha" name="fecha" value="<%= infoMinisterio.fecha %>"  placeholder="Fecha de Hoy">
                            </div>
                         </div>
                         <div class="form-group mb-3">
                            <label class="font-weight-bold"  for="lider12">Líder 12 <span class="text-danger">*</span></label>
                            <input class="form-select input " name="lider12" value="<%= infoMinisterio.lider12 %>" id="lider12" name="lider12" required aria-label="Default select example">
                         </input>                                                                 
                        </div>
                    
                         
                         <div class="form-group mb-3">
                             <label class="font-weight-bold"  for="lider144">Líder 144 <span class="text-danger">*</span></label>
                             <input type="text" class="form-control" id="lider144" value="<%= infoMinisterio.lider144 %>"  name="lider144" placeholder="Nombre del Líder de 144">
                         </div>
                         <div class="form-group mb-3">
                            <label class="font-weight-bold"  for="liderCelula">Líder Inmediato <span class="text-danger">*</span></label>
                            <input type="text" class="form-control"id="liderCelula" name="liderCelula"  value="<%= infoMinisterio.liderCelula %>" placeholder="Nombre del Líder de Célula">
                        </div>

                        <div class="form-group mb-3">
                            <label class="font-weight-bold"  for="pago">Poner el Monto a Pagar <span class="text-danger">*</span></label>
                            <select class="form-select " id="pago" name="pago" value="<%= infoMinisterio.pago %>" aria-label="Default select example">
                            <option selected>- Seleccione -</option>
                            <option value="30000">20000</option>
                            <option value="40000">30000</option>
                            <option value="50000">35000</option>
                          </select>                                                                 

                        </div>
                        <div class="form-group mb-3">
                            <label class="font-weight-bold"  for="ciclo">Ciclo <span class="text-danger">*</span></label>
                            <select class="form-select " id="ciclo" name="ciclo" value="<%= infoMinisterio.ciclo %>" aria-label="Default select example">
                            <option selected>- Seleccione -</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                          </select>                                                                 

                        </div>
                        <div class="form-group mb-3">
                            <label class="font-weight-bold"  for="recibo">Numero de recibo <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="recibo" name="recibo" value="<%= infoMinisterio.recibo %>"  placeholder="Numero del recibo">
                        </div>
                        <div class="form-group mb-3">
                            <label class="font-weight-bold"  for="forma">Forma de Pago <span class="text-danger">*</span></label>
                         <select class="form-select " id="forma" name="forma" required value="<%= infoMinisterio.forma %>" aria-label="Default select example">
                            <option selected>- Seleccione -</option>
                            <option value="Bancolombia">Bancolombia</option>
                            <option value="Banco Occidente">Banco Occidente</option>
                            <option value="Efectivo">Efectivo</option>
                            <option value="Datafono">Datáfono</option>
                          </select>                                                                 

                        </div>
                         <div class="form-group mb-2">
                             <div class="form-check">
                                 <input class="form-check-input" id="terminosYcondiciones" type="checkbox">
                                 <label class="form-check-label text-muted" for="terminosYcondiciones">Al seleccionar esta casilla aceptas nuestro aviso de privacidad y los términos y condiciones</label>
                             </div>
                         </div>
                         <br>
                         <button type="submit" class=" btn btn-primary width-100">Enviar registro</button>
                     </form>
                    
                     <small class="d-inline-block text-muted mt-5">Todos los derechos reservados | © 2023 MCI BUCARAMANGA SOFWARE</small>
                 </div>
            </div>
        </div>
    </section>
                            

    <script>
        function selectOption(option) {
          document.getElementById("forma").value = option;
        }
      </script>
 <script>
    $(document).ready(function() {
      var total = 0;
  
      $('#calma tbody tr').each(function() {
        var valor = parseInt($(this).find('td:eq(8)').text());
        if (!isNaN(valor)) {
          total += valor;
        }
      });
  
      var totalFormatted = total.toLocaleString('es-CO'); // Agregar separador de miles
      $('#total').text(totalFormatted);
    });
  </script>
    

    <% } %>
